[Unit]
Description=Ombi - PMS Requests System
After=network-online.target

[Service]
User=ombi
Group=ombi
WorkingDirectory=/opt/ombi/
ExecStart=/opt/ombi/Ombi --storage /etc/ombi/ --host http://127.0.0.1:5000
Type=simple
TimeoutStopSec=30
Restart=on-failure
RestartSec=5

[Install]
WantedBy=multi-user.target
